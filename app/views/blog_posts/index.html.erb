<% self.respond_to?(:title) && title(@index_title) -%>
<% @show_title = false -%>
<%= auto_discovery_link_tag :atom, blog_posts_path(:format => :atom) %>


<% if @blog_posts.size == 0 && !params[:page] %>
	<div class="blogPost">
		<h1>Nessun Post</h1>
		<p>Non vi sono ancora Post in questo Blog, torna presto.</p>
	</div>
<% else %>
	<% if @tag %>
		<h1>Elenco dei post presenti nel portale con tag: '<%= @tag %>'</h1>
	<% end %>
	<%= render :collection => @blog_posts, :partial => 'blog_post' %>
<% end %>

<div class="blogPages">
	<%= will_paginate @blog_posts %>
</div>

<%= render :partial => 'admin_links' %>
