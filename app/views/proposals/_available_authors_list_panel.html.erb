<%end%>

	<%=f.submit 'Fatto!', :class=>'btn blue'%>
    <a href="#" onclick="$('#available_authors_list_container').dialog('close');return false;" class="btn"><%= 'Annulla' %></a>
<%end%>
<%else%>
