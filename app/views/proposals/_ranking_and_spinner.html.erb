<div class="vote_container">
<%if @group%>
<%= link_to '', {:action => "rank"+action, :controller => "proposals", :id => @proposal.id, :group_id => @group.id}, :remote => true,  :id => "vote"+action, :class=>"vote"+action %>
<%else%>
<%= link_to '', {:action => "rank"+action, :controller => "proposals", :id => @proposal.id}, :remote => true, :id => "vote"+action, :class=>"vote"+action %>
<%end%>
<span class="vote_description"><%= action == 'up' ? t('proposals.show.ready_for_vote') : t('proposals.show.keep_discuss') %></span>
