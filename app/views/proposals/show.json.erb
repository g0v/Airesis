{<%=raw @proposal.to_json(
only: [:title, :created_at, :updated_at, :proposal_category_id, :rank, :valutations],
methods: [:short_content, :percentage, :is_anonima?, :users_j],
include: {
    interest_borders: {
        only: [:territory_id, :territory_type],
        methods: [:description]},
    groups: { only: [:id, :name, :image_url]},
    sections: {only: [:seq, :title],
               include: {paragraphs: {
                 only: [:seq, :content]
    }}},
    solutions: { only: [:seq],
                 include:  {
        sections: {only: [:seq, :title],
                   include: {paragraphs: {
                    only: [:seq, :content]
                   }}
    }}}})%>}