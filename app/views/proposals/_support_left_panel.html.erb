<div class="mybox">
  <h4><%= t('pages.proposals.show.supporting_group') %></h4>

  <div class="mycont">
    <% @proposal.groups.each do |group| %>
        <div class="pcontainer">
          <div class="MoImg24">
            <%= group.group_image_tag 24 %>
          </div>
          <div class="Mo">
            <%= link_to group.name[0..20], group_path(group) %>
          </div>
          <div style="clear: both;"></div>
        </div>
    <% end %>
    <%= t('pages.proposals.show.no_supporting_group') if @proposal.groups.empty? %>
    <% if signed_in? %>
        <% if !current_user.scoped_group_partecipations(GroupAction::PROPOSAL).empty? && (can? :partecipate, @proposal) %>
            <%= link_to t('pages.proposals.show.support_proposal_button'), new_proposal_proposal_support_path(@proposal), :remote => true, :class => 'btn blue supportButton disable' %>
        <% end %>
    <% end %>
  </div>
</div>