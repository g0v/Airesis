#notification-panel {
	background-color: white;
	border-bottom: 1px solid #CCCCCC;
	border-left: 1px solid #CCCCCC;
	border-right: 1px solid #CCCCCC;
	color: #294145;
	display: block;	
	margin-left: -224px;
	margin-top: 11px;
	padding: 10px;
	/*position: absolute;*/
	text-align: left;
	width: 235px;
	min-height:40px;
	z-index: 3;
}


#notification-panel ul.menu-list,
#notification-portlet ul.menu-list {
    list-style-type: none;   
    margin-top: 2px;
    padding: 0 0 0;
}

#notification-panel ul.menu-list li.new,
#notification-portlet ul.menu-list li.new {
	padding-top:2px;
	padding-bottom:2px;
	border-bottom: 1px solid #CCCCCC;
	background-color: #FBEC88;
}

#notification-panel ul.menu-list li.old,
#notification-portlet ul.menu-list li.old {
	padding-top:2px;
	padding-bottom:2px;
	border-bottom: 1px solid #CCCCCC;
}

#notification-panel ul.menu-list li:hover,
#notification-portlet ul.menu-list li:hover {
	opacity: 0.5;	
}

#notification-panel .menu-footer,
#groups_panel .menu-footer,
#notification-portlet .menu-footer {
	background-color: #DFEFFC;
    font-weight: bold;   
    text-align: center;
    padding: 7px 0px;
}

#notification-panel ul.menu-list a:hover,
#notification-portlet ul.menu-list a:hover {
	text-decoration: none;
}

#notification-portlet .notification_list {
	height:99%;
	position:relative;
}

#notification-portlet .notification_list .menu-footer{	
	position:absolute;
	bottom:0px;
	width: 100%;
}


.alerts_link {
	float:right;
    padding: 0px;
    width: 32px;
    height: 30px;
    /*margin-top: 3px;*/
    border-top: 1px solid transparent;
    border-left: 1px solid transparent;
    border-right: 1px solid transparent;
    cursor: pointer;    
    text-align: center;
	position: relative;
	background: url(<%=asset_path "chat_speak.png"%>);
}

.alerts_link.active {    
    border-top: 1px solid #CCCCCC;
    border-left: 1px solid #CCCCCC;
    border-right: 1px solid #CCCCCC;
    background: url(<%=asset_path "chat_speak_white.png"%>);
}


.alerts_link.to_read {	
	background: url(<%=asset_path "chat_speak_yellow.png"%>);
}

.alerts_link.active.to_read {    
    background: url(<%=asset_path "chat_speak_white_yellow.png"%>);
}


.alerts_link .number {
	margin-top: 4px;
	color: white;
}

.alerts_link.to_read .number {
	margin-top: 6px;
	color: #333;
}


.alerts_link img {
	position: absolute;
	width:30px;
	height:30px;
}
