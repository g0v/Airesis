.groupListContainer {
    border: 1px solid #cccccc;
    background: repeat scroll 0 0 #FFF;
    border-radius: 5px;
    float: left;
    margin-bottom: 15px;

    margin-right: 15px;
    padding: 10px;
    position: relative;
    width: 430px;
    height: 120px;
}

.groupListContainer h3 {
    font-size: 18px;
    line-height: 20px;
    margin: 0px;
    white-space: nowrap;
    text-transform: uppercase;
}

.groupUserImage {
    float: left;
    margin: 0px 5px 5px 0px;
    height: 120px;
    width: 120px;
}

.groupcontainer {
    clear: both;
}

.groupcontainer .groupImg24 {
    cursor: pointer;
    float: left;
    height: 24px;
    width: 24px;
    margin-right: 5px;
    margin-top: 2px;

}

.groupcontainer .group {
    cursor: pointer;
    float: left;
    /*width:140px;*/
}

.group_description {
    font-size: 16px;
    font-weight: bold;
}

input.days, input.hours, input.minutes {
    width: 50px;
}

.form_float {
    float: left;
    padding: 5px 10px 5px 0;
}

.loading_groups {
    background-color: #FAFAFA;
    border-top: 1px solid #E3E3E3;
    display: block;
    padding: 10px 0;
    text-align: center;
    color: #3366CC;
    font-weight: bold;
    cursor: pointer;
}

.loading_groups:hover {
    background-color: #F4F4F4;
    text-decoration: none;
}

#groups_list {
    margin-bottom: 10px;
}

#tag_cloud {
    padding: 15px 0px;
}

#group_search_form ul.token-input-list {
    width: 300px;
}

.groupListContainer .groupDescription .count {
    vertical-align: super;
}

.groupDescription {
    margin-right: 5px;
    max-width: 100px;
    overflow: hidden;
    width: 70px;
}


.territoryDescription {
    width: 75px;
    position: relative;
    white-space: nowrap;
    overflow: hidden;
}

.group_bottom {
    border-top: 1px solid #ccc;
    padding-top: 7px;
    padding-left: 5px;
}

.groupListContainer .group_tag_desc {
    height: 60px;
    font-size: 0.9em;
    text-align: justify;
    overflow: hidden;
    margin-bottom: 5px;
    margin-top: 5px;
    position: relative;
}

.groupListContainer .group_tag_desc .fade_out{
    position: absolute;
    bottom: 0px;
    height: 30px;
    width: 100%;
    background: -webkit-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
    background-image: -moz-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
    background-image: -o-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
    background-image: linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
    background-image: -ms-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
}


.groupListContainer .groupName {
    float: left;
    width: 305px;
    overflow: hidden;
    position: relative;

}

.title_fade {
    background-image: url('<%=asset_path 'vertical_line.png'%>');
    height: 20px;
    position: absolute;
    width: 20px;
    right: -3px;
    top: 0px;
}


.territory_fade {
    background-image: url('<%=asset_path 'vertical_line.png'%>');
    height: 20px;
    position: absolute;
    width: 20px;
    right: -3px;
    top: 0px;
}

.group_info .portlet_panel {
    width: auto;
    max-width: 398px;
}

.group_show_page {
    position:relative;
}

.s_circle {
    border: 3px solid #888;
    border-radius: 50%;
    width:  11px;
    height: 11px;
}

.on .s_circle {
    border-color:  #888;
}


.off .s_circle {
    border-color:  #ccc;
}

.on .s_circle .i_circle{
    border-color:  #888;
    background-color: #888;
}


.off .s_circle .i_circle {
    border-color:  #ccc;
    background-color: #ccc;
}


.s_circle .i_circle {
    border: 2px solid #888;
    border-radius: 50%;
    width: 1px;
    height: 1px;
    margin: auto;
    margin-top: 3px;
    background-color: #888;
}